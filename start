          <tr><td>4</td><td>Indien</td><td>InduPower Pvt.</td><td>146.900</td></tr>
          <tr><td>5</td><td>Polen</td><td>MiningTech Polska</td><td>139.400</td></tr>
          <tr><td>6</td><td>Japan</td><td>EnergyEmision Co.</td><td>135.100</td></tr>
